@model IEnumerable<WebAppCourseFinalProject.Models.Post>

@{
    ViewData["Title"] = "My Posts";
}

<h2>My Posts</h2>


<p>
    <a asp-controller="Posts" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentTrimmed)
                </td>
            
                <td>
                    <a asp-controller="Posts" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Posts" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>