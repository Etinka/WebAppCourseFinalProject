@model WebAppCourseFinalProject.Models.CreatePostViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Post.Title" class="control-label"></label>
            <input asp-for="Post.Title" class="form-control" id="inputdefault" />
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Post.Content" class="control-label"></label>
            <br />
            <textarea asp-for="Post.Content" name="Post.Content" placeholder="Write something.." class="overrideheight"></textarea>
            <span asp-validation-for="Post.Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Post.VideoLink" class="control-label"></label>
            <input asp-for="Post.VideoLink" class="form-control" />
            <span asp-validation-for="Post.VideoLink" class="text-danger"></span>
        </div>
        <label>Select Categories:</label>
        <br />
        @Html.ListBoxFor(m => m.SelectedCategories, new SelectList(Model.Categories, "Id", "Name"), new { size = 5 })
        <br />
        <div class="form-group">
            <br />
            <label asp-for="NewCategories" class="control-label"></label>
            <input asp-for="NewCategories" class="form-control" />
            <span asp-validation-for="NewCategories" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles{
    <link href="~/css/post.css" rel="stylesheet" />
}